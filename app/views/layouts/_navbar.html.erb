<header class="header">
    <div class="header-wrapper">
        <div class="container">
            <div class="header-inner">
                <div class="header-logo">
                    <a href="index.html">
                        <img src="/assets/img/logo.png" alt="Logo">
                        <span>Superlist</span>
                    </a>
                </div><!-- /.header-logo -->
                <div class="header-content">
                    <div class="header-top">
                        <div class="header-search">
                            <%= form_with(scope: :search, url: searches_path, data: {remote: false}) do |f| %>
                            <%= f.text_field :keyword, placeholder: "Search for...", class: "form-control" %>
                            <%= f.submit "Submit", :disable_with => 'Submiting...', class: "hide collapse" %>
                            <% end %>
                        </div><!-- /.header-search -->
                        <ul class="header-nav-social social-links nav nav-pills">
                            <% if user_signed_in? %>
                            <li><a href="javascript:;" title="Share on facebook" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="javascript:;" title="Share on twitter" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-twitter"></i></a></li>
                            <% else %>
                            <li><a href="javascript:;" title="Login by facebook" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="javascript:;" title="Login by google" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-google"></i></a></li>
                            <li><a href="javascript:;" title="Login by twitter" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-twitter"></i></a></li>
                            <% end %>
                        </ul><!-- /.header-nav-social -->
                        <ul class="header-nav-secondary nav nav-pills">
                            <% if user_signed_in? %>
                            <li><a href="javascript:;" class="text-success">Connected</a></li>
                            <% else %>
                            <li><a href="<%= new_user_session_path %>">Login</a></li>
                            <li><a href="<%= new_user_registration_path %>">Register</a></li>
                            <% end %>
                        </ul>
                    </div><!-- /.header-top -->
                    <div class="header-bottom">
                        <% if user_signed_in? %>
                        <div class="header-action">
                            <a href="javascript:;" class="header-action-inner" title="Share my location" data-toggle="tooltip" data-placement="bottom">
                                <i class="fa fa-plus"></i>
                            </a><!-- /.header-action-inner -->
                        </div><!-- /.header-action -->
                        <% else %>
                        <div class="header-action">
                            <a href="javascript:;" class="header-action-inner" title="Help us to grow" data-toggle="tooltip" data-placement="bottom">
                                <i class="fa fa-share"></i>
                            </a><!-- /.header-action-inner -->
                            <!-- <div class="share-wrapper">
                                    <ul class="share">
                                        <li><i class="fa fa-facebook"></i> Facebook</li>
                                        <li><i class="fa fa-twitter"></i> Twitter</li>
                                        <li><i class="fa fa-google-plus"></i> Google+</li>
                                        <li><i class="fa fa-pinterest"></i> Pinterest</li>
                                        <li><i class="fa fa-chain"></i> Link</li>
                                    </ul>
                                </div> -->
                        </div><!-- /.header-action -->
                        <% end %>
                        <ul class="header-nav-primary nav nav-pills collapse navbar-collapse">
                            <li class="active">
                                <a href="#">Home <i class="fa fa-chevron-down"></i></a>
                                <ul class="sub-menu">
                                    <li><a href="/">Home</a></li>
                                    <li><a href="/pages/pricing">Pricing</a></li>
                                    <li><a href="/pages/contact">Contact</a></li>
                                    <li><a href="/pages/terms-conditions">Terms &amp; conditions</a></li>
                                </ul>
                            </li>
                            <% if user_signed_in? %>
                            <% if current_user.has_locations? %>
                            <li>
                                <a href="javascript:;">My locations <i class="fa fa-chevron-down"></i></a>
                                <ul class="sub-menu">
                                    <% current_user.places.limit(5).each do |place| %>
                                    <li><a href="<%= place_path(place) %>">
                                            <%= place.title %></a></li>
                                    <% end %>
                                    <li>
                                        <a href="<%= dashboard_path %>">All</a>
                                    </li>
                                    <li><a href="<%= new_place_path %>">New place</a></li>
                                </ul>
                            </li>
                            <% end %>
                            <li>
                                <a href="#">Admin <i class="fa fa-chevron-down"></i></a>
                                <ul class="sub-menu">
                                    <li><a href="/dashboard">Dashboard</a></li>
                                    <li><a href="<%= dashboard_path(index: 'bookmark') %>">My favorites</a></li>
                                    <li><a href="<%= dashboard_path(index: 'heart') %>">My loves</a></li>
                                </ul>
                            </li>
                            <% end %>
                            <li>
                                <a href="#">User <i class="fa fa-chevron-down"></i></a>
                                <ul class="sub-menu">
                                    <% if user_signed_in? %>
                                    <li><a href="<%= my_profile_path %>">My profile</a></li>
                                    <li><a href="<%= destroy_user_session_path %>" data-method="DELETE">Logout</a></li>
                                    <% else %>
                                    <li><a href="<%= new_user_session_path %>">Login</a></li>
                                    <li><a href="<%= new_user_registration_path %>">Register</a></li>
                                    <% end %>
                                </ul>
                            </li>
                            <% if user_signed_in? && current_user.is_admin? %>
                            <li>
                                <a href="#">Admin <i class="fa fa-chevron-down"></i></a>
                                <ul class="sub-menu">
                                    <li><a href="/admin">Dashboard</a></li>
                                    <li><a href="admin-grid.html">Grid System</a></li>
                                    <li><a href="admin-tables.html">Tables</a></li>
                                    <li><a href="admin-forms.html">Forms</a></li>
                                    <li><a href="admin-notifications.html">Notifications</a></li>
                                </ul>
                            </li>
                            <% end %>
                        </ul>
                        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".header-nav-primary">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div><!-- /.header-bottom -->
                </div><!-- /.header-content -->
            </div><!-- /.header-inner -->
        </div><!-- /.container -->
    </div><!-- /.header-wrapper -->
</header><!-- /.header -->
<%= render 'layouts/flash' %>