<%= form_with(model: comment, html: { class: "background-white p20 add-review" }) do |f| %>

    <div class="form-group input-rating">
        <div class="rating-title">Share your rate*</div>
        <%= f.radio_button :vote_weight, 1, id: "rating-comment-1" %>
        <label for="rating-comment-1"></label>
        <%= f.radio_button :vote_weight, 2, id: "rating-comment-2" %>
        <label for="rating-comment-2"></label>
        <%= f.radio_button :vote_weight, 3, id: "rating-comment-3", checked: true, selected: true %>
        <label for="rating-comment-3"></label>
        <%= f.radio_button :vote_weight, 4, id: "rating-comment-4" %>
        <label for="rating-comment-4"></label>
        <%= f.radio_button :vote_weight, 5, id: "rating-comment-5" %>
        <label for="rating-comment-5"></label>
    </div><!-- /.col-sm-3 -->
<div class="row">
    <div class="form-group col-sm-12 collapse hide">
        <%= f.label :commentable_id %>
        <%= f.text_field :commentable_id, class: "form-control" %>
    </div><!-- /.col-sm-6 -->
    <div class="form-group col-sm-6">
        <%= f.label :pos_body, "Pos*" %>
        <%= f.text_area :pos_body, class: "form-control", rows: 5 %>
    </div><!-- /.col-sm-6 -->
    <div class="form-group col-sm-6">
        <%= f.label :neg_body, "Neg" %>
        <%= f.text_area :neg_body, class: "form-control", rows: 5 %>
    </div><!-- /.col-sm-6 -->
    <div class="col-sm-8">
        <p>Required fields are marked <span class="required">*</span></p>
    </div><!-- /.col-sm-8 -->
    <div class="col-sm-4">
        <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-star"></i>Submit Review</button>
    </div><!-- /.col-sm-4 -->
</div><!-- /.row -->
<% end %>