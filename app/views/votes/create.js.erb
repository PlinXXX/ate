$(`#<%= @item_type.to_s + "-" + @item.id.to_s + "-" + @vote_type %>`).html(`
<% if @short && @short != "false" %>
	<% if @vote_type.include?("_report") %>
		<%= render 'votes/report', vote_type: @vote_type, item: @item, item_type: @item_type, vote_weight: @vote_weight, color: @color %>
	<% else %>
		<%= render 'votes/short_vote', vote_type: @vote_type, item: @item, item_type: @item_type, vote_weight: @vote_weight, color: @color %>
	<% end %>
<% else %>
	<%= render 'votes/vote', vote_type: @vote_type, item: @item, item_type: @item_type, vote_weight: @vote_weight, color: @color, first_content: @first_content, second_content: @second_content  %>
<% end %>
`)