<div class="background-white p20 mb30">
    <%= form_with(model: service, url: url) do |f| %>
    <% if service.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>
        <ul>
            <% service.errors.full_messages.each do |message| %>
            <li>
                <%= message %>
            </li>
            <% end %>
        </ul>
    </div>
    <% end %>
    <div class="form-group">
        <%= f.label :place_id %>
        <%= f.text_field :place_id, class: "form-control", readonly: true %>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-12 col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="col-12 col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                <%= f.label :category_id %>
                <select class="form-control" title="Select Category" name="service[category_id]" id="service_category_id" required="">
                    <option>No category</option>
                    <% place.activity.categories.each do |category| %>
                    <option value="<%= category.id %>" <%=action_name=="edit" && service.category==category ? 'selected=""' : "" %>>
                        <%= category.name %>
                    </option>
                    <% end %>
                </select>
            </div>
            <div class="col-12 col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                <%= f.label :price %>
                <%= f.text_field :price, min: "0.00", max: "10000.00", step: "0.01", currency: true, class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-12 col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6" style="height: 113px;">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control", style: "height: 100%;" %>
            </div>
            <div class="col-12 col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <%= f.label :image %>
                <%= f.file_field :image, id: "input-file", required: true %>
            </div>
        </div>
    </div>
    <div class="actions text-right">
        <%= f.submit "Add", class: "btn btn-primary btn-xs" %>
    </div>
    <% end %>
</div>
<% content_for :foot_js do %>
<script type="text/javascript">
loadInputCurrency('Ar');
</script>
<% end %>