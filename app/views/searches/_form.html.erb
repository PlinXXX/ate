<%= form_with(scope: :search, url: searches_path, html: {class: "filter"}) do |f| %>
<div class="row">
    <div class="col-sm-12 col-md-4">
        <div class="form-group">
            <%= f.text_field :keyword, placeholder: "Keyword", class: "form-control" %>
        </div><!-- /.form-group -->
    </div><!-- /.col-* -->
    <div class="col-sm-12 col-md-4">
        <div class="form-group">
            <select name="search[type]" id="search_type" class="form-control" title="What are you looking for ?">
                <option value="place">Location</option>
                <option value="service">Service</option>
                <option value="profile">Person</option>
            </select>
        </div><!-- /.form-group -->
    </div><!-- /.col-* -->
    <div class="col-sm-12 col-md-4">
        <div class="form-group">
            <select name="search[category]" id="search_category" class="form-control" title="Select Category">
                <% categories.each do |category| %>
                <option value="<%= category %>">
                    <%= category %>
                </option>
                <% end %>
            </select>
        </div><!-- /.form-group -->
    </div><!-- /.col-* -->
</div><!-- /.row -->
<hr>
<div class="row">
    <div class="col-sm-8">
        <div class="filter-actions">
            <button type="reset" class="btn-link"><i class="fa fa-close"></i> Reset Filter</button>
            <a href="#"><i class="fa fa-save"></i> Save Search</a>
        </div><!-- /.filter-actions -->
    </div><!-- /.col-* -->
    <div class="col-sm-4">
        <button type="submit" class="btn btn-primary w-100">Redefine Search Result</button>
    </div><!-- /.col-* -->
</div><!-- /.row -->
<hr>
<h2 class="page-title mt-0 mb-0">
    <span class="result-length"><%= items.length %></span> results found in <span class="result-took">0 ms</span>
    <div class="filter-sort">
        <div class="form-group">
            <select name="search[sort_by]" id="search_sort_by" title="Sort by">
                <option value="title" selected="">Title</option>
                <option value="price">Price</option>
                <option value="rating">Rating</option>
            </select>
        </div><!-- /.form-group -->
        <div class="form-group">
            <select name="search[order]" id="search_order" title="Order">
                <option value="ASC" selected="">Asc</option>
                <option value="DESC">Desc</option>
            </select>
        </div><!-- /.form-group -->
    </div>
</h2><!-- /.page-title -->
<% end %>